{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pylint lint",
            "type": "shell",
            "command": "python -m pylint ./src",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/shinerainsevenlib"
            },
        },
        {
            "label": "ruff lint",
            "type": "shell",
            "command": "python -m ruff check ./src",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/shinerainsevenlib"
            },
        },
        {
            "label": "ruff lint-and-fix",
            "type": "shell",
            "command": "python -m ruff format ./src",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/shinerainsevenlib"
            },
        },
        {
            "label": "build documentation",
            "type": "shell",
            "command": "sphinx-build -M html ./docs ./docs/_build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/shinerainsevenlib"
            },
        }
    ]
}


