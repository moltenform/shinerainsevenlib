{
    
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["--capture=no", "--maxfail=1", "-v", "tests/"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "coverage",
            "args": ["run", "-m", "pytest", "--capture=no", "--maxfail=1", "-v", "tests/"],
            "cwd": "${workspaceFolder}"

        },
        {
            "name": "Explore (debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "nocpy_explore.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
    ]
}
